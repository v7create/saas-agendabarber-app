# Firebase Configuration
VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# API Keys (nunca commitar o .env real!)
VITE_GEMINI_API_KEY=your_gemini_key_here

# App Configuration
VITE_APP_NAME=AgendaBarber
VITE_APP_URL=https://your-app-url.com
VITE_WHATSAPP_BUSINESS_PHONE=5511999999999

# ============================================
# APP CHECK (reCAPTCHA v3)
# ============================================
# IMPORTANTE: Use a SITE KEY (chave pública), NÃO a SECRET KEY!
# Obtenha em: Firebase Console > App Check > Apps > Register/Edit
# 
# SITE KEY (para o cliente/navegador):
VITE_FIREBASE_APP_CHECK_KEY=6Lc...sua-site-key-aqui
#
# SECRET KEY (NÃO adicione aqui! Fica no Firebase Console)
# A SECRET KEY é usada apenas no servidor/Firebase
#
# Para desenvolvimento local, use debug token:
VITE_FIREBASE_APP_CHECK_DEBUG_TOKEN=true
# Ou cole o token específico gerado no console:
# VITE_FIREBASE_APP_CHECK_DEBUG_TOKEN=ABCD1234-EFGH-5678-IJKL-9012MNOP3456
